@model List<Product>


<div class="container">
    <div class="row-pt4">
        <div class="col-6">
            <h2 class="text-primary">
                Products
            </h2>
        </div>
        <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
            Add new Product
        </a>
    </div>
</div>


<h1>Products</h1>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Product Price
        </th>
        <th>
            Product Category ID
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var obj in Model.OrderBy(u=> u.Name))
    {
        <tr>
            <td>@obj.Name</td>
            <td>
                @obj.Price
            </td>
            <td>@obj.Category.Name</td>
            
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Delete
                    </a>
                    
                </div>
                
            </td>
        </tr>
    }
    </tbody>
</table>
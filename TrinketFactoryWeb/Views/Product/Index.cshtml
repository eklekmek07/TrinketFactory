@model List<Product>


<div class="container">
    <div class="row-pt4">
        <div class="col-6">
            <h2 class="text-primary">
                Products
            </h2>
        </div>
        <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
            Add new Product
        </a>
    </div>
</div>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow  border-top border-5 rounded">
                        <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
                        <h1 hidden>https://github.com/bhrugen/Bulky_MVC/blob/master/BulkyWeb/Areas/Customer/Views/Home/Index.cshtml</h1>
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Name</p>
                                <p class="card-title text-warning text-center">by <b>@product.Category.Name</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    List Price: 
                                    <span class="text-decoration-line-through">
                                        @product.Price.ToString("c")
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<h1>Products</h1>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Product Price
        </th>
        <th>
            Product Category ID
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var obj in Model.OrderBy(u=> u.Name))
    {
        <tr>
            <td>@obj.Name</td>
            <td>
                @obj.Price
            </td>
            <td>@obj.Category.Name</td>
            
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Delete
                    </a>
                    
                </div>
                
            </td>
        </tr>
    }
    </tbody>
</table>
@model Product

<form method="post">
    @*<input asp-for=""Id" hidden />*@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Product</h2>
            <hr/>
        </div>
        @*<div asp-validation-summary=""ModelOnly"></div>*@
        <div class="mb-3 row">
            <label asp-for="Name">Product Name</label>
            <input asp-for="Name" type="text" class="form-control"/>

        </div>
        <div class="mb-3 row">
            <label>Product Price</label>
            <input asp-for="Price" type="text" class="form-control"/>
        </div>
        <div class="mb-3 row">
            <label>Product Category ID</label>
            <input asp-for="CategoryId" type="text" class="form-control"/>
        </div>
        <div class="mb-3 row">
            <label class="col-form-label">Product Image URL</label>
            <div class="col-sm-8">
                <input asp-for="ImagePath" type="text" class="form-control" />
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-form-label">Preview</label>
            <div class="col-sm-8">
                <img src="@Model.ImagePath" class="img-fluid" alt="Product Image" />
            </div>
        </div>
        
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="product" asp-action="Index" class="btn btn-secondary">
            Cancel
        </a>
    </div>
</form>
@model List<CartItem>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Cart
            </h2>
        </div>
        
    </div>
</div>

<h1>Cart</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Item Name
            </th>
            <th>
                Item Price
            </th>
            <th>
                Item Quantity
            </th>
            <th>
                Action
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(obj => obj.Product.Name))
        {
            <tr>
                <td>@obj.Product.Name</td>
                <td>
                    @{
                        var totalPrice = obj.Product.Price * obj.Quantity;
                    }
                    @totalPrice
                </td>
                <td>@obj.Quantity</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <form asp-controller="Cart" asp-action="Increment" method="post">
                            <input type="hidden" name="id" value="@obj.Id" />
                            <button type="submit" class="btn btn-primary mx-2">
                                <i class="bi bi-plus"></i> Increment
                            </button>
                        </form>
                        <form asp-controller="Cart" asp-action="Decrement" method="post">
                            <input type="hidden" name="id" value="@obj.Id" />
                            <button type="submit" class="btn btn-primary mx-2">
                                <i class="bi bi-dash"></i> Decrement
                            </button>
                        </form>
                        <form asp-controller="Cart" asp-action="Remove" method="post">
                            <input type="hidden" name="id" value="@obj.Id" />
                            <button type="submit" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Remove
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
